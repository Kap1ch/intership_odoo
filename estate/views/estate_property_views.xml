    <record id="view_estate_property_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Properties">
                <field name="name" string="Title"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area" string="Living Area (sqm)"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability" string="Available From"/>
                <field name="property_type_id"/>
                <field name="seller_id"/>
                <field name="buyer_id"/>
                <field name="tag_ids"/>
            </tree>
        </field>
    </record>

     <record id="view_estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <sheet>
                    <group>
                        <h1><field name="name" required="1"/></h1>
                        <group>
                        </group>
                    </group>
                    <group>
                        <h1><field name="tag_ids" widget="many2many_tags"/></h1>
                        <group>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="property_type_id" string="Property Type"/>
                            <field name="postcode"/>
                            <field name="expected_price" required="1"/>
                        </group>
                        <group>
                            <field name="selling_price" readonly="1"/>
                            <field name="best_price" string="Best Offers"/>
                            <field name="date_availability"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area"/>
                                <field name="total_area"/>
                                <field name="garden_orientation"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids">
                                <tree>
                                    <field name="price"/>
                                    <field name="partner_id"/>
                                    <field name="status"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Other info">
                            <group>
                                <field name="seller_id" string="Salesman"/>
                                <field name="buyer_id" string="Buyer"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Estate Properties">
                <field name="name" string="Title"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="property_type_id"/>
                <field name="seller_id"/>
                <field name="buyer_id"/>
                <filter name="available_properties" string="Properties"
                        domain="[('state', 'in', ['new', 'offer_received'])]"/>

                <filter name="group_by_postcode" string="Postcode" context="{'group_by': 'postcode'}"/>
            </search>
        </field>
    </record>
</odoo>
